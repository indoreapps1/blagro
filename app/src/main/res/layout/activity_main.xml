<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_bg"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/txt_cicrle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/cart_circle"
        android:gravity="center"
        android:textColor="@color/colorSkyBue"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/cart_circle"
        android:gravity="center"
        android:src="@drawable/ic_add_black_24dp"
        android:textColor="@color/colorSkyBue"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txt_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_cicrle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Create New Order"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_margin="10dp"
        android:layout_above="@id/txt_cicrle"
        android:layout_alignParentLeft="true"
        android:background="@drawable/drawable_roundable_login"
        android:gravity="center"
        android:padding="10dp"
        android:text="Retailer List"
        android:textColor="@color/colorSkyBue"
        android:textSize="14sp"
        android:textStyle="bold|italic" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_cicrle"
        android:layout_alignRight="@id/txt_cicrle"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/drawable_roundable_login"
        android:gravity="center"
        android:padding="10dp"
        android:text="Distributor List"
        android:textColor="@color/colorSkyBue"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/txt_create"
        android:layout_alignBottom="@id/txt_create"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/drawable_roundable_login"
        android:gravity="center"
        android:padding="10dp"
        android:text="Distributors"
        android:textColor="@color/colorSkyBue"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_create"
        android:layout_alignBottom="@id/txt_create"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@drawable/drawable_roundable_login"
        android:gravity="center"
        android:padding="10dp"
        android:text="Retailers"
        android:textColor="@color/colorSkyBue"
        android:textSize="14sp"
        android:textStyle="bold|italic" />


</RelativeLayout>